{
    "manifest_version": 2,
    "name": "turtleTab",
    "description": "Calls you a turtle",
    "version": "0.0.0.9",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions" : [
        "management",
        "geolocation",
        "https://api.darksky.net/*",
        "storage",
        "tabs"
    ],
    "chrome_url_overrides" : {
        "newtab": "index.html"
    },
    "background": {
      "persistent": false,
      "scripts": [ "js/background.js" ]
   },
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png", // https://commons.wikimedia.org/wiki/File:Turtle_Icon.svg
            //"24": "icons/icon24.png",
            "32": "icons/icon32.png"
        },
        "default_title": "turtleTab"
    }
 }
